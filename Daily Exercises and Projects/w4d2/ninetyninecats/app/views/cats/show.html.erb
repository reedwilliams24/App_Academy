<head> THIS IS OUR CAT! </head>
<% c = Cat.find_by_id(params[:id]) %>
<body>

  <table>
    <tr>
      <td>Name:</td>
      <td><%= c[:name] %></td>
    </tr>

    <tr>
      <td>Color:</td>
      <td><%= c[:color] %></td>
    </tr>

    <tr>
      <td>Birth Date:</td>
      <td><%= c[:birth_date] %></td>
    </tr>

    <tr>
      <td>Age:</td>
      <td><%= c.age %></td>
    </tr>

    <tr>
      <td>Sex:</td>
      <td><%= c[:sex] %></td>
    </tr>

    <tr>
      <td>Description:</td>
      <td><%= c[:description] %></td>
    </tr>

  </table>
<%= link_to "Edit Cat", cat_url+"/edit" %>

<button type="button"
  onclick=<% c.destroy%>>Kill Cat</button>
</body>
